	<script type="text/javascript">
	
    function marcando()
		  {
		  var map = new google.maps.Map(
			  document.getElementById("googleMap"), 
			  { zoom: 14,
			  center: new google.maps.LatLng({{uni.latitud}}, {{uni.longitud}}),
			  mapTypeId: google.maps.MapTypeId.ROADMAP }),
		    marker = new google.maps.Marker({
			  position: new google.maps.LatLng({{uni.latitud}}, {{uni.longitud}}),
			  draggable: true,
			  title: 'Universidad' }),
	      infoWindow = new google.maps.InfoWindow({content: '{{uniname}}'});

	    marker.setMap(map);
	    infoWindow.open(map, marker);
		  }
		  google.maps.event.addDomListener(window, 'load', marcando);

	</script>

